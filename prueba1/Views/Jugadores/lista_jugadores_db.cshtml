@model IEnumerable<prueba1.Models.jugador>

@{
    ViewBag.Title = "lista_jugadores_db";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>lista_jugadores_db</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Agregar_jugador")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar_jugador", new { id=item.id }) |
            @Html.ActionLink("Detalles", "Detalle_jugador", new { id=item.id }) |
            @Html.ActionLink("Borrar", "Borrar_jugador", new { id=item.id })
        </td>
    </tr>
}

</table>
